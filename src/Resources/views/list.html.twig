{% extends '@RuventsAdmin/base.html.twig' %}

{% use '@RuventsAdmin/list_types.html.twig' %}

{% block main %}
    <div class="card mb-g">
        <table class="table table-bordered">
            <thead>
            <tr>
                {% for field in config.fields %}
                    <th>{{ field.title|default(field.name) }}</th>
                {% endfor %}
            </tr>
            </thead>
            <tbody>
            {% for entity in paginator.items %}
                <tr>
                    {% for field in config.fields %}
                        <td>
                            {% set value = attribute(entity, field.name) %}
                            {{ block('field_' ~ field.type) }}
                        </td>
                    {% endfor %}
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <nav class="sticky-bottom">
        {% set route = app.request.attributes.get('_route') %}
        {% set route_params = app.request.attributes.get('_route_params', []) %}
        {% embed '@RuventsPaginator/bootstrap_4.html.twig' with {paginator: paginator, class: 'justify-content-center'} %}
            {% block href path(route, route_params|merge({page: page.first ? null : page.number})) %}

            {% block previous_label 'Предыдущая' %}

            {% block next_label 'Следующая' %}
        {% endembed %}
    </nav>
{% endblock %}

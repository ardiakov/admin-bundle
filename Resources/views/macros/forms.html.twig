{%- macro collection_add_btn_attr(collection, prototype, attr = []) -%}
    {%- set attr = attr|attr_add_class('form-collection-add') -%}
    {%- set attr = attr|merge({
    'data-collection': '#'~collection.vars.id,
    'data-prototype': form_row(prototype),
    'data-prototype-name': prototype.vars.name,
    }) -%}
    {%- for attrname, attrvalue in attr %}{{ not loop.first ? ' ' }}{{ attrname }}="{{ attrvalue }}"{% endfor -%}
{%- endmacro -%}

{%- macro collection_remove_btn_attr(collection, attr = []) -%}
    {%- set attr = attr|attr_add_class('form-collection-remove') -%}
    {%- set attr = attr|merge({
    'data-collection': '#'~collection.vars.id
    }) -%}
    {%- for attrname, attrvalue in attr %}{{ not loop.first ? ' ' }}{{ attrname }}="{{ attrvalue }}"{% endfor -%}
{%- endmacro -%}

<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
<head>
    <meta charset="{{ _charset }}">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0">
    {% block meta '' %}

    <title>{% block title '' %}</title>

    {% block css %}
        <link href="{{ asset('bundles/ruworkadmin/vendor/bower_components/open-sans-fontface/open-sans.css') }}" rel="stylesheet">
        <link href="{{ asset('bundles/ruworkadmin/css/bootstrap.min.css') }}" rel="stylesheet">
        <link href="{{ asset('bundles/ruworkadmin/css/pixeladmin.min.css') }}" rel="stylesheet">
        <link href="{{ asset('bundles/ruworkadmin/css/widgets.min.css') }}" rel="stylesheet">
        <link href="{{ asset('bundles/ruworkadmin/css/themes/default.min.css') }}" rel="stylesheet">
        <link href="{{ asset('bundles/ruworkadmin/vendor/bower_components/font-awesome/css/font-awesome.min.css') }}" rel="stylesheet">
        <link href="{{ asset('bundles/ruworkadmin/css/app.min.css') }}" rel="stylesheet">
    {% endblock %}
</head>
<body>
{% include '@RuworkAdmin/nav_left.html.twig' %}

{% include '@RuworkAdmin/nav_top.html.twig' %}

<div class="px-content">
    {% block content '' %}
</div>

{% block js %}
    <!--suppress JSUnusedLocalSymbols -->
    <script>
        'use strict';

        var app = {{ {
            locale: app.request.locale,
        }|json_encode|raw }}
    </script>
    <script src="{{ asset('bundles/ruworkadmin/vendor/bower_components/jquery/dist/jquery.min.js') }}"></script>
    <script src="{{ asset('bundles/ruworkadmin/js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('bundles/ruworkadmin/js/pixeladmin.min.js') }}"></script>
    {% if app.request.locale is same as('ru') %}
    <script src="{{ asset('bundles/ruworkadmin/vendor/bower_components/select2/dist/js/i18n/ru.js') }}"></script>
    <script src="{{ asset('bundles/ruworkadmin/vendor/bower_components/bootstrap-datepicker/dist/locales/bootstrap-datepicker.ru.min.js') }}"></script>
    <script src="{{ asset('bundles/ruworkadmin/vendor/bower_components/bootstrap-markdown/locale/bootstrap-markdown.ru.js') }}"></script>
    {% endif %}
    <script src="{{ asset('bundles/ruworkadmin/js/ruwork_admin.js') }}"></script>
{% endblock %}
</body>
</html>
